<div class="content0">

    <h2>Connexion</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", autofocus: true, placeholder: "email@example.com", class:"form-control"%>
    </div>

    <div class="form-group">
        <%= f.label :mot_de_passe %><br />
        <%= f.password_field :password, autocomplete: "off", autofocus: true, placeholder: "******", class:"form-control"%>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :se_souvenir_de_moi %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Me connecter", class:"btn", id:"register_button"%>
    </div>
    <% end %>

    <br>
    <%= render "users/shared/links" %>

</div>

