<div class="content0">

    <h2>Inscription</h2>

    <%= form_for(resource, as: resource_name, url: user_registration_path, class: "form") do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class:"form-control" %>
        </div>

        <div class="form-group">
            <%= f.number_field :compte, autocomplete: "off", placeholder:"123456789", class:"form-control" %>
        </div>

        <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", placeholder:"Mot de passe (#{@minimum_password_length} caractÃ¨res minimum)", class:"form-control" %>
        </div>

        <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Confirmation du mot de passe", class:"form-control" %>
        </div>

        <div class="actions">
            <%= f.submit "M'inscrire", class:"btn btn-default", id:"register_button" %>
        </div>

    <% end %>

    <br>
    <%= render "users/shared/links" %>

</div>

